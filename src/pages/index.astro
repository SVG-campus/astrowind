---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import Features2 from '~/components/widgets/Features2.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Fort — Empowering Communities',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Section -->
  <Hero
    tagline="Welcome to Fort"
    title="Empowering Communities"
    subtitle="A non‑profit dedicated to fixing the world's problems through innovative solutions and community support."
    actions={[
      { variant: 'primary', text: 'Join Us', href: '/join', icon: 'tabler:users' },
      { text: 'Learn More', href: '/about' },
    ]}
    image={{ src: '~/assets/images/hero-image.png', alt: 'Fort Hero Image' }}
  >
    <Fragment slot="title">
      Empowering Communities for a Better Tomorrow
    </Fragment>
    <Fragment slot="subtitle">
      At Fort, we unite technology, compassion, and innovation to bring help where it's needed most.
    </Fragment>
  </Hero>

  <!-- Tools & Initiatives Section -->
  <Features2
    title="Our Tools & Initiatives"
    subtitle="Leveraging cutting‑edge technology and community support to drive change."
    tagline="Our Focus Areas"
    columns={3}
    items={[
      {
        title: 'Fort AI',
        description: 'Unlimited GPT‑4 access to foster innovation and problem‑solving.',
        icon: 'tabler:brand-openai',
      },
      {
        title: 'Assistance',
        description: 'Providing hands‑on support and resources to communities in need. (Placeholder)',
        icon: 'tabler:help',
      },
      {
        title: 'Health & Wellness',
        description: 'Initiatives to improve health and wellbeing across communities. (Placeholder)',
        icon: 'tabler:heart',
      },
      {
        title: 'Community',
        description: 'Building networks and fostering collaboration for positive impact. (Placeholder)',
        icon: 'tabler:users',
      },
      {
        title: 'Faith',
        description: 'Supporting spiritual growth and unity through community programs. (Placeholder)',
        icon: 'tabler:star',
      },
    ]}
  />

  <!-- Final Call-to-Action -->
  <CallToAction
    title="Join Fort Today"
    subtitle="Your support can transform lives—become a part of our mission to create lasting change."
    actions={[
      { variant: 'primary', text: 'Get Involved', href: '/join' },
      { text: 'Learn More', href: '/about' },
    ]}
  >
    <Fragment slot="title">
      Join <span class="text-accent dark:text-white highlight">Fort</span>
    </Fragment>
    <Fragment slot="subtitle">
      Together, we can build a better future for all.
    </Fragment>
  </CallToAction>
</Layout>
