---
import Hero from '~/components/widgets/Hero.astro';
import Stats from '~/components/widgets/Stats.astro';
import Features3 from '~/components/widgets/Features3.astro';
import Steps2 from '~/components/widgets/Steps2.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'About Us',
};
---

<Layout metadata={metadata}>
  <!-- Hero Section -->
  <Hero
    tagline="About Us"
    image={{
      src: 'https://images.unsplash.com/photo-1559136555-9303baea8ebd?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Dynamic Visual',
    }}
  >
    <Fragment slot="title">
      Elevate your online presence with our
      <br />
      <span class="text-accent dark:text-white highlight">Beautiful Website Templates</span>
    </Fragment>
    <Fragment slot="subtitle">
      We craft innovative solutions that blend creativity with cuttingâ€‘edge technology. Our approach is rooted in quality, reliability, and a passion for design.
    </Fragment>
  </Hero>

  <!-- Statistics Section -->
  <Stats
    title="Our Impact"
    stats={[
      { title: 'Offices', amount: '4' },
      { title: 'Employees', amount: '248' },
      { title: 'Templates', amount: '12' },
      { title: 'Awards', amount: '24' },
    ]}
  />

  <!-- Templates Showcase -->
  <Features3
    title="Our Templates"
    subtitle="Explore our diverse range of templates designed to inspire."
    columns={3}
    isBeforeContent={true}
    items={[
      {
        title: 'Educational',
        description: 'Templates designed for learning institutions and educational projects.',
        icon: 'tabler:template',
      },
      {
        title: 'Interior Design',
        description: 'Showcase your creative designs with a modern, clean layout.',
        icon: 'tabler:template',
      },
      {
        title: 'Photography',
        description: 'Highlight your portfolio with visually appealing templates.',
        icon: 'tabler:template',
      },
    ]}
  />

  <!-- Values and Achievements -->
  <Steps2
    title="Our Values & Achievements"
    subtitle="Driven by quality, innovation, and a commitment to excellence."
    items={[
      {
        title: 'Customer-Centric',
        description: 'We put our customers first by ensuring every interaction is meaningful.',
      },
      {
        title: 'Continuous Improvement',
        description: 'We constantly evolve to bring you the latest trends and best practices.',
      },
      {
        title: 'Industry Recognition',
        description: 'Celebrated for our innovation and quality across multiple awards.',
      },
    ]}
  />
</Layout>
